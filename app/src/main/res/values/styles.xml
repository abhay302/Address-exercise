<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorGray</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textColorHint">@color/defaultTextColor</item>
        <item name="android:fontFamily">@font/muli</item>
    </style>

    <style name="AddAddressButtonTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorYellow</item>
    </style>

    <style name="CustomCheckBox" parent="AppTheme">
        <item name="colorAccent">@color/checkBoxColor</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="InputFieldTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:paddingStart">@dimen/input_start_padding</item>
        <item name="android:paddingEnd">@dimen/input_end_padding</item>
        <item name="android:paddingBottom">@dimen/input_bottom_padding</item>
        <item name="android:backgroundTint">@color/colorGray</item>
    </style>

</resources>
