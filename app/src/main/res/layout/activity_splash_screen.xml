<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".controllers.splash.SplashScreen">

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="@dimen/splash_logo_width"
        android:layout_height="@dimen/splash_logo_height"
        android:layout_gravity="center"
        android:keepScreenOn="true"
        app:srcCompat="@drawable/splash_screen_image"
        android:contentDescription="@string/splash_logo_description" />

</FrameLayout>