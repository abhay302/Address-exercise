<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DisplayAddressFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/display_address_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_address_button_in_display_address_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="19.75dp"
        android:layout_marginEnd="21.75dp"
        android:scaleType="center"
        android:theme="@style/MyAddButtonTheme"
        app:fabCustomSize="53.75dp"
        app:srcCompat="@drawable/add_address_icon"
        app:elevation="0dp" />

</FrameLayout>
